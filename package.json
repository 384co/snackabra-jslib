{
    "name": "snackabra",
    "version": "0.4.40",
    "description": "Snackabra Core Libraries",
    "type": "module",
    "main": "index.mjs",
    "types": "index.d.ts",
    "scripts": {
        "prepare": "tsc -p src/tsconfig.json && rollup -c > index.mjs && BROWSER=true rollup -c > browser.mjs",
        "pretest": "tsc -p src/tsconfig.json && rollup -c > index.mjs",
        "test": "NODE_OPTIONS=--experimental-vm-modules jest",
        "start": "npm run build && npm run watch",
        "build": "tsc -p src/tsconfig.json && rollup -c > index.mjs && BROWSER=true rollup -c > browser.mjs",
        "serve:test": "serve -p 8080 -s test-web-server",
        "nodemon": "nodemon --watch ./src/snackabra.ts -L -e ts --ignore node_modules/ --exec \"npm run build\"",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript, Pack, Test Server\" -c \"green.bold,cyan.bold,magenta.bold,white.bold\"  \"npm run watch-ts\" \"npm run nodemon\" \"npm run serve:test\"",
        "watch-ts": "tsc -p src/tsconfig.json -w"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/snackabra/snackabra-jslib.git"
    },
    "keywords": [
        "snackabra",
        "chat",
        "messaging",
        "photo",
        "file",
        "share"
    ],
    "author": "Magnusson Institute and 384co",
    "license": "GPL-3.0-only",
    "bugs": {
        "url": "https://github.com/snackabra/snackabra-jslib/issues"
    },
    "homepage": "https://snackabra.io",
    "browser": {
        "./index.mjs": "./browser.mjs"
    },
    "files": [
        "index.mjs",
        "index.d.ts",
        "browser.mjs"
    ],
    "sideEffects": false,
    "devDependencies": {
        "@rollup/plugin-replace": "^5.0.1",
        "@rollup/plugin-terser": "^0.1.0",
        "concurrently": "^6.0.0",
        "nodemon": "^2.0.14",
        "rollup": "^3.2.3",
        "serve": "^14.1.1"
    }
}
