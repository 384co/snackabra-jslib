{
  "name": "snackabra",
  "version": "1.1.22",
  "description": "Snackabra Core Library ('jslib')",
  "main": "dist/snackabra.min.js",
  "types": "dist/snackabra.d.ts",
  "scripts": {
    "start": "npm run watch",
    "build": "npm run build:jslib && npm run build:test && npm run minify && npm run copy-js",
    "build:jslib": "tsc -p ./jslib/tsconfig.json",
    "build:test": "tsc -p ./test/tsconfig.json && echo \"tests built\"",
    "watch": "concurrently -k -p \"[{name}]\" -n \"JSLib, Test, Minify\" -c \"green.bold,cyan.bold,magenta.bold,white.bold\" \"npm run nodemon:jslib\" \"npm run nodemon:test\" \"npm run minify\"",
    "nodemon:jslib": "nodemon --watch jslib/src/snackabra.ts -L -e ts --ignore node_modules/ --exec \"npm run build:jslib\"",
    "nodemon:test": "nodemon --watch test/src/*.ts -L -e ts --ignore node_modules/ --exec \"npm run build:test\"",
    "minify": "webpack --config webpack.config.js",
    "copy-js": "cp ./jslib/build/* ./jslib/src/snackabra.ts ./dist",
    "clean": "rm -rf jslib/build/* test/build/*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/snackabra/snackabra-jslib.git"
  },
  "keywords": [
    "typescript",
    "snackabra",
    "chat",
    "messaging",
    "photo",
    "file",
    "storage",
    "share"
  ],
  "author": "Magnusson Institute",
  "license": "GPL-3.0-only",
  "bugs": {
    "url": "https://github.com/snackabra/snackabra-jslib/issues"
  },
  "homepage": "https://snackabra.readthedocs.io",
  "files": [
    "dist/snackabra.min.js",
    "dist/snackabra.d.ts",
    "dist/snackabra.d.ts.map",
    "dist/snackabra.js",
    "dist/snackabra.js.map",
    "dist/snackabra.ts"
  ],
  "sideEffects": false,
  "devDependencies": {
    "@rollup/plugin-terser": "^0.4.0",
    "concurrently": "^6.0.0",
    "nodemon": "^2.0.14",
    "typescript": "^5.0.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "packageManager": "yarn@1.22.19"
}
