{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window"],
    "strict": true,
    "types": [
      "types/index.d.ts"
    ]
  },
  "lint": {
    "files": {
      "include": ["src/"],
      "exclude": ["coverage","__tests__","FileSystemDB","test-web-server", "src/main.js"]
    },
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": ["no-unused-vars"]
    }
  },
  "fmt": {
    "files": {
      "include": ["src/"],
      "exclude": ["src/testdata/"]
    },
    "options": {
      "useTabs": true,
      "lineWidth": 80,
      "indentWidth": 4,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  },
  "test": {
    "files": {
      "include": ["__tests__"],
      "exclude": ["src/testdata/"]
    }
  }
}
