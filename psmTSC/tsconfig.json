{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "isolatedModules": true,
    "jsx": "react",
    "pretty": false,
    "explainFiles": true,
    "lib": [
      "es2015",
      "es2021",
    ],
    "module": "esnext",
    "moduleDetection": "force",
    "strict": true,
    "target": "es2015",
    "useDefineForClassFields": true,
    "sourceMap": true,
  }
}
